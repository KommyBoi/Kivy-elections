WindowManager:
    GrNo:
    Heads:
    InvalidGr:

<GrNo>:
    name: "GrNo"
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            Label:
                text: 'Enter your GR Number :'
                font_size: 50
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'top'
            TextInput:
                size_hint: (0.5, None)
                height: '45dp'  # Set an appropriate height
                width: '15dp' 
                multiline: False
                font_size: 35
                id: gr_input
        Button:
            text: "NEXT" 
            font_size: 32
            on_release: app.handle_button(gr_input)
            size_hint_y: (0.5)

<InvalidGr>:
    name: "InvalidGr" 
    FloatLayout:
        Label:
            text: 'Invalid GR Number, Restart Application!'
            font_size: 50
            size_hint: None, None
            size: self.texture_size
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}



<Heads>:
    name: "Heads"
    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        Label:
            text: "Voting for headboy"
            font_size: 50
        
        BoxLayout:
            size_hint_x: (0.95)
            padding: 20
            spacing: 15
            orientation: "horizontal"
            ToggleButton:
                group: 'HB'  # Group for headboy options
                id: HB-1
                text: "Option 1"
                background_normal: "boing.jpg"
                font_size: 30
                valign: 'bottom'
                halign: 'center'
                on_state: app.options.HandleOptionB('HB-1', self.state)

            ToggleButton:
                group: 'HB'  # Group for headboy options
                id: HB-2
                text: "Option 2"
                background_normal: "boing.jpg"
                font_size: 30
                valign: 'bottom'
                halign: 'center'
                on_state: app.options.HandleOptionB('HB-2', self.state)
        Label: 
            text: "Voting for headgirl"
            font_size: 30
        BoxLayout:
            padding: 25
            spacing: 15
            orientation: "horizontal"
            ToggleButton:
                group: 'HG'  # Group for headgirl options
                id: HG-1
                text: "Option 1"
                background_normal: "boing.jpg"
                font_size: 30
                valign: 'bottom'
                halign: 'center'
                on_state: app.options.HandleOptionG('HG-1', self.state)

            ToggleButton:
                group: 'HG'  # Group for headgirl options
                id: HG-2
                text: "Option 2"
                background_normal: "boing.jpg"
                font_size: 30
                valign: 'bottom'
                halign: 'center'
                on_state: app.options.HandleOptionG('HG-2', self.state)
        Button:
            text: "Next"
            size_hint_y: (0.5)
            on_release: app.database.voteUpdateB(); app.database.voteUpdateG()


