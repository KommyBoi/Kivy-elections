<MyElect>
    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        Label:
            text: "Voting for headboy"
            font_size: 50
        
        BoxLayout:
            size_hint_x: (0.95)
            padding: 20
            spacing: 15
            orientation: "horizontal"
    ToggleButton:
        id: option1
        text: "Option 1"
        padding: [10, 0] 
        text_size: self.size 
        valign: 'bottom' 
        halign: 'center'  
        background_normal: "boing.jpg"
        font_size: 30
        group: 'options'
        on_state:
            root.selected_option = self.text if self.state == 'down' else None
    ToggleButton:
        id: option2
        text: "Option 2"
        padding: [10, 0] 
        text_size: self.size 
        valign: 'bottom' 
        halign: 'center'  
        background_normal: "boing.jpg"
        font_size: 30
        group: 'options'
        on_state:
            root.selected_option = self.text if self.state == 'down' else None
    ToggleButton:
        id: option3
        text: "Option 3"
        padding: [10, 0] 
        text_size: self.size 
        valign: 'bottom' 
        halign: 'center'  
        background_normal: "boing.jpg"
        font_size: 30
        group: 'options'
        on_state:
            root.selected_option = self.text if self.state == 'down' else None
        Label: 
            text: "Voting for headgirl"
            font_size: 50
        BoxLayout:
            padding: 25
            spacing: 15
            orientation: "horizontal"
            Button:
                text: "Option 1"
            Button:
                text: "Option 2"
            Button:
                text: "Option 3"
        Button:
            text: "Next"
            size_hint_y: (0.5)
